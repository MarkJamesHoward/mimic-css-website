---
import MySiteLayout from '../layouts/Layout.astro';
import {Content as DesignSystem } from './DesignSystem.md';
import {Content as PseudoClasses } from './PseudoClasses.md';
import {Content as Install } from './Install.md';
import {Content as Usage } from './Usage.md';
import {Content as Mappings } from './DesignSystemMappings.md';
import {Content as ExampleSnapping } from './ExampleSnapping.md';
import {Content as Overview } from './Overview.md';
// import    '../../node_modules/scroll-to-top-wc/index.ts';

import '../../mimic.css';
---

<MySiteLayout title="MimicCSS">

  <div class="color:white display:flex flex-direction:column">

      
      <div class="width:100% medium?display:flex flex-direction:row">
        
        <div class="display:flex flex-direction:column medium?flex-basis:20% position:sticky top:0px height:200px">
          <div class="display:none medium?display:block">
            <ul class="list-style-type:none">
              <li onclick="Scroll('DesignSystem')" class="text-decoration:none background-color:#010101:hover cursor:pointer:hover">
                Design System
              </li>
              <li class="text-decoration:none background-color:#010101:hover cursor:pointer:hover">
                PseudoClasses
              </li>
              <li class="text-decoration:none background-color:#010101:hover cursor:pointer:hover">
                Install
              </li>
              <li class="text-decoration:none background-color:#010101:hover cursor:pointer:hover">
                Usage
              </li>
              <li class="text-decoration:none background-color:#010101:hover cursor:pointer:hover">
                Snapping Examples
              </li>
            </ul>
          </div>
          
        </div>

        <div class="medium?flex-basis:80% margin-left:lg margin-right:sm medium?margin-right:lg">

          <div class="position:sticky top:0px margin-bottom:xl font-size:xl extralarge?font-size:2xl font-weight:2xl background-color:black color:white text-align:center">Mimic CSS</div>
     

          <div>
            <div>
              <Overview/>
              <DesignSystem/>
              <hr class="margin:xl">
              <PseudoClasses/>
              <hr class="margin:xl">
              <Install/>
              <hr class="margin:xl">
              <Usage/>
              <hr class="margin:xl">
              <Mappings/>
              <hr class="margin:xl">
              <ExampleSnapping/>
            </div>
          </div>

        </div>

      </div>

      <!-- <ScrollToTop client:load/> -->

  </div>
</MySiteLayout>


<script is:inline>
    function Scroll(location) {
    switch (location) {
      case 'DesignSystem':
      window.scrollTo({ top: 100, behavior: "smooth" });
      break;
      case 'PseudoClasses':
      window.scrollTo({ top: 200, behavior: "smooth" });
      break;
      case 'Install':
      window.scrollTo({ top: 300, behavior: "smooth" });
      break;
      case 'Usage':
      window.scrollTo({ top: 400, behavior: "smooth" });
      break;
      case 'Snapping Examples':
      window.scrollTo({ top: 500, behavior: "smooth" });
      break;
     
    }

  }
  // Will be rendered into the HTML exactly as written!
  // Local imports are not resolved and will not work.
  // If in a component, repeats each time the component is used.
</script>

